<body>
  <%- include('partials/_header') %>
    <form action="/api/users/login" method="POST">
      <div>
        <h1>Login</h1>
        <h3>Email</h3>
        <input class="ml-auto" type="email" name="email" placeholder="my-email" />
        <h3>Password</h3>
        <input class="ml-auto" type="password" name="password" placeholder="Enter Password" />
        <div class="login-signup">
          <button class="login-btn" type="submit">Log in</button>
          <p>Don't have an account?<a href="/users/register" class="signin-btn">Sign up</a></p>
        </div>
      </div>
    </form>
</body>

