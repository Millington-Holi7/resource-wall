<!DOCTYPE html>
<html lang="en">

<head>
  <title>Resourse Wall | Profile</title>

  <!-- META INFORMATION -->

  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- EXTERNAL CSS -->
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/profile.css" />

  <!-- EXTERNAL JAVASCRIPT -->

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/users.js"></script>
</head>
<%- include('partials/_header') %>

  <body>

    <form action="/users/profile" method="POST">
      <div>
        <h1>Update user profile</h1>

        <img src="<%= user.profile_pic %>" />

        <h3>Change Image</h3>
        <input class="ml-auto" type="url" name="profile_pic" placeholder="upload a url" />

        <h3>Username</h3>
        <input class="ml-auto" type="name" name="username" placeholder="<%=user.username %>" />

        <h3>Email address</h3>
        <input class="ml-auto" type="email" name="email" placeholder="<%= user.email %>" />

        <h3>Password</h3>
        <input class="ml-auto" type="password" name="password" placeholder="Enter Password" />

        <div class="Save_info">
          <button id="saveButton" class="btn" type="submit">Save</button>
        </div>
      </div>
    </form>
  </body>
  <script>

    $('#saveButton').click(function () {
      // Change the background color to green
      $(this).css('background-color', 'green');

      // Update the button text to "Saved"
      $(this).text('Saved');
    });
  </script>

</html>