<!DOCTYPE html>
<html lang="en">

<head>
  <title>Resourse Wall | Profile</title>

  <!-- META INFORMATION -->

  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- EXTERNAL CSS -->
  <link rel="stylesheet" href="vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/profile.css" />

  <!-- EXTERNAL JAVASCRIPT -->

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/users.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
    <form action="/users/profile" method="POST">
      <div>
        <h1>Update user profile</h1>
        <div class="upper-section">
          <img src="<%= profile_pic %>" id="output" width="200" />
          <div class="upload_image">
            <label class="-label" for="file">
              <span class="glyphicon glyphicon-camera"></span>
              <h3>Change Image</h3>
            </label>
            <input class="ml-auto" type="url" name="profile_pic" placeholder="upload a url" />
          </div>
        </div>
        <h3>Username</h3>
        <input class="ml-auto" type="name" name="username" placeholder="<%= username %>" />
        <h3>Email address</h3>
        <input class="ml-auto" type="email" name="email" placeholder="<%= email %>" />
        <h3>Password</h3>
        <input class="ml-auto" type="password" name="password" placeholder="Enter Password" />
        <div class="Save_info">
          <button id="saveButton" class="btn" type="submit">Save</button>
        </div>
      </div>
    </form>
</body>

</html>
